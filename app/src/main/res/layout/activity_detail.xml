<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.DetailActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:cardMaxElevation="2dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageID"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_below="@+id/imageID"
                    android:id="@+id/idLayout"
                    android:layout_margin="2dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/Id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Id :" />

                    <TextView
                        android:id="@+id/idValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Id value"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_weight=".5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:id="@+id/titleLayout"
                    android:layout_margin="2dp"
                   android:layout_below="@id/idLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="title value"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_weight=".5" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_margin="2dp"
                    android:id="@+id/albumLayout"
                    android:layout_below="@id/titleLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/albumID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="Album Id :" />

                    <TextView
                        android:id="@+id/albumIDValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="album value"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_weight=".5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_margin="2dp"
                    android:layout_below="@id/albumLayout"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/urlId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_weight=".5"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="url :" />

                    <TextView
                        android:id="@+id/uldIDValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="url value"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_weight=".5" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</layout>